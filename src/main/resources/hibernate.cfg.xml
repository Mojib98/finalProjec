<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:postgresql://localhost:5432/project</property>
        <property name="connection.username">project</property>
        <property name="connection.password">1</property>
        <property name="hibernate.hbm2ddl.auto">update</property> <!-- Generates Database Schema. Do not Use In PRODUCTION! -->
        <property name="show_sql">true</property>
        <property name="dialect">org.hibernate.dialect.PostgresPlusDialect</property>
        <property name="current_session_context_class">thread</property>
        <property name="connection.autocommit">true</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
    </session-factory>
</hibernate-configuration>
